//base class for all monsters

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using HeroQuest.Items;

namespace HeroQuest.Monsters
{
    abstract class Monster
    {
        protected int mBodyPoints;    //health
        protected int mMindPoints;    //spell resistance
        protected int mAttack;        //attack dice
        protected int mDefend;        //defend dice
        protected int mGold;          //amount of gold coins dropped
        protected string mName;       //monster name
        protected Item mItem;         //item that drops when killed
        protected float dropRate;     //item & gold drop rate. Gold takes precedence
        protected int mMove;          //movement
    }
}
